{
	"version": "2.0.0",
	"tasks": [{
		
		"label": "build",
		"group": { "kind": "build", "isDefault": true },
		
		"problemMatcher": "$msCompile",
		"presentation": { "reveal": "silent" },
		
		"type": "shell",
		"command": "dotnet",
		"linux": { "options": { "env": { "FrameworkPathOverride": "/lib/mono/4.5/" } } },
		"args": [ "build", "-c", "Debug" ]
		
	},{
		
		"label": "test",
		"group": { "kind": "test", "isDefault": true },
		
		"type": "shell",
		"command": "dotnet",
		"linux": { "options": { "env": { "FrameworkPathOverride": "/lib/mono/4.5/" } } },
		"args": [ "test" ]
		
	},{
		
		"label": "run",
		"dependsOn": "build",
		
		"type": "shell",
		"command": "mono",
		"options": { "cwd": "${env:VINTAGE_STORY}" },
		"args": [
			"\"${env:VINTAGE_STORY}/Vintagestory.exe\"",
			"-p3", "--openWorld", "\"modding test world.vcdbs\"",
			"--addOrigin", "\"${workspaceFolder}/TestMod/assets\""
		]
		
	},{
		
		"label": "debug",
		"dependsOn": "build",
		
		
		"type": "shell",
		"command": "mono",
		"options": { "cwd": "${env:VINTAGE_STORY}" },
		"args": [
			"--debug", "--debugger-agent=transport=dt_socket,server=y,address=127.0.0.1:55555",
			"\"${env:VINTAGE_STORY}/Vintagestory.exe\"",
			"-p3", "--openWorld", "\"modding test world.vcdbs\"",
			"--addOrigin", "\"${workspaceFolder}/TestMod/assets\""
		]
		
	}]
}
